{
  "id": "#root",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Article": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Article",
      "description": "An article about activity that is being carried through in the realm of OER.",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The article's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": [
            "Article"
          ]
        },
        "creator": {
          "description": "The author of the article",
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "$ref": "#/definitions/Person"
              },
              {
                "$ref": "#/definitions/Organization"
              }
            ]
          }
        },
        "name": {
          "$ref": "#/definitions/LocalizedString"
        },
        "articleBody": {
          "$ref": "#/definitions/LocalizedString"
        },
        "image": {
          "type": "string",
          "format": "uri"
        },
        "mainEntity": {
          "oneOf": [
            {
              "$ref": "#/definitions/Person"
            },
            {
              "$ref": "#/definitions/Organization"
            },
            {
              "$ref": "#/definitions/Service"
            },
            {
              "$ref": "#/definitions/Action"
            }
          ]
        },
        "mentions": {
          "description": "Something mentioned in the article",
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "$ref": "#/definitions/Organization"
              },
              {
                "$ref": "#/definitions/Person"
              },
              {
                "$ref": "#/definitions/Service"
              },
              {
                "$ref": "#/definitions/Action"
              }
            ]
          }
        }
      }
    },
    "Action": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Action",
      "description": "An action / project that is being carried through in the realm of OER.",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The action's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": [
            "Action"
          ]
        },
        "additionalType": {
          "description": "An additonal type for the Action",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "email": {
          "type": "string"
        },
        "agent": {
          "description": "The direct performer or driver of the action (i.e. also primary contact)",
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "$ref": "#/definitions/Person"
              },
              {
                "$ref": "#/definitions/Organization"
              }
            ]
          }
        },
        "participant": {
          "description": "Other co-agents that participated in the action",
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "$ref": "#/definitions/Person"
              },
              {
                "$ref": "#/definitions/Organization"
              }
            ]
          }
        },
        "name": {
          "$ref": "#/definitions/LocalizedString"
        },
        "alternateName": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "$ref": "#/definitions/LocalizedString"
        },
        "image": {
          "type": "string",
          "format": "uri"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "sameAs": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "startTime": {
          "oneOf": [
            {
              "$ref": "#/definitions/date-fullyear"
            },
            {
              "$ref": "#/definitions/full-date"
            },
            {
              "$ref": "#/definitions/date-time"
            }
          ]
        },
        "endTime": {
          "oneOf": [
            {
              "$ref": "#/definitions/date-fullyear"
            },
            {
              "$ref": "#/definitions/full-date"
            },
            {
              "$ref": "#/definitions/date-time"
            }
          ]
        },
        "location": {
          "$ref": "#/definitions/Place"
        },
        "instrument": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Service"
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "Service": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Service",
      "description": "A service used in an Action.",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The services's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": [
            "Service"
          ]
        },
        "name": {
          "$ref": "#/definitions/LocalizedString"
        },
        "alternateName": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "serviceType": {
          "type": "string"
        },
        "description": {
          "$ref": "#/definitions/LocalizedString"
        },
        "image": {
          "type": "string",
          "format": "uri"
        },
        "provider": {
          "description": "The person or organization responsible for provision of the service.",
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "$ref": "#/definitions/Person"
              },
              {
                "$ref": "#/definitions/Organization"
              }
            ]
          }
        },
        "availableChannel": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "availableLanguage": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "serviceUrl": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
       "sameAs": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "startDate": {
          "oneOf": [
            {
              "$ref": "#/definitions/date-fullyear"
            },
            {
              "$ref": "#/definitions/full-date"
            },
            {
              "$ref": "#/definitions/date-time"
            }
          ]
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "location": {
          "$ref": "#/definitions/Place"
        },
        "about": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "license": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "audience": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "Person": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Person",
      "description": "A person serving or working with Open Educational Resources.",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "@context": {
              "type": "string",
              "format": "uri"
            },
            "@id": {
              "description": "The person's unique identifier",
              "type": "string",
              "format": "uri"
            },
            "@type": {
              "type": "string",
              "enum": [
                "Person"
              ]
            },
            "name": {
              "$ref": "#/definitions/LocalizedString"
            },
            "location": {
              "$ref": "#/definitions/Place"
            },
            "url": {
              "type": "string",
              "format": "uri"
           },
            "sameAs": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
        {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "mbox_sha1sum": {
                  "type": "string"
                }
              },
              "required": [
                "mbox_sha1sum"
              ]
            },
            {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                }
              },
              "required": [
                "email"
              ]
            }
          ]
        }
      ]
    },
    "Organization": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Organization",
      "description": "An institution serving or working with Open Educational Resources.",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The organization's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": [
            "Organization"
          ]
        },
        "location": {
          "description": "The organization's address and geo data",
          "$ref": "#/definitions/Place"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
       "sameAs": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "description": {
          "description": "The description of the organization",
          "$ref": "#/definitions/LocalizedString"
        },
        "name": {
          "$ref": "#/definitions/LocalizedString"
        },
        "alternateName": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "logo": {
          "type": "string",
          "format": "uri"
        },
        "contactPoint": {
          "description": "A contact point",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "additionalType": {
          "description": "An additonal type for the Organization",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name"
      ]
    },
    "Place": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Place",
      "description": "An location description consisting of an address and/or geo data",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The place's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": [
            "Place"
          ]
        },
        "geo": {
          "$ref": "#/definitions/GeoCoordinates"
        },
        "address": {
          "$ref": "#/definitions/PostalAddress"
        }
      },
      "required": [
        "address"
      ],
      "additionalProperties": false
    },
    "GeoCoordinates": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "GeoCoordinates",
      "description": "A geographical coordinate",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The geo coordinates's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "lat": {
          "type": "number"
        },
        "lon": {
          "type": "number"
        }
      },
      "required": [
        "lat",
        "lon"
      ],
      "additionalProperties": false
    },
    "PostalAddress": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "PostalAddress",
      "description": "An universal address description",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The geo addresses' unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": [
            "PostalAddress"
          ]
        },
        "streetAddress": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "addressLocality": {
          "type": "string"
        },
        "addressRegion": {
          "type": "string"
        },
        "addressCountry": {
          "$ref": "#/definitions/Country"
        }
      },
      "required": [
        "addressCountry"
      ],
      "additionalProperties": false
    },
    "LocalizedString": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Localized string",
      "description": "A language-tagged string",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@language": {
            "type": "string"
          },
          "@value": {
            "type": "string"
          }
        },
        "required": [
          "@language",
          "@value"
        ],
        "additionalProperties": false
      }
    },
    "date-fullyear": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Year",
      "description": "4 digit year",
      "type": "string",
      "pattern": "^[0-9]{4}$"
    },
    "full-date": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Full Date",
      "description": "Full Date",
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "date-time": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Full Date and Time",
      "description": "Full Date and Time",
      "type": "string",
      "format": "date-time"
    },
