{
  "id": "#root",
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "Action": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Action",
      "description": "An action that is being carried through in the realm of OER.",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The action's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": ["Action"]
        },
        "agent": {
          "description": "The direct performer or driver of the action (i.e. also primary contact)",
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {"$ref": "#/definitions/Person"},
              {"$ref": "#/definitions/Organization"}
            ]
          }
        },
        "participant": {
          "description": "Other co-agents that participated in the action",
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {"$ref": "#/definitions/Person"},
              {"$ref": "#/definitions/Organization"}
            ]
          }
        },
        "name": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LocalizedString"
          }
        },
        "description": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/LocalizedString"
          }
        },
        "image": {
          "type": "string",
          "format": "uri"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        },
        "location": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Place"
          }
        },
        "instrument": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Service"
          }
        }
      },
      "required": ["name", "description", "agent"],
      "additionalProperties": false
    },
    "Service": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Service",
      "description": "A service used in an Action.",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The services's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": ["Service"]
        },
        "serviceChannel": {
          "type": "object",
          "properties": {
            "serviceUrl": {
              "type": "string",
              "format": "uri"
            }
          }
        }
        },
      "additionalProperties": false
    },
    "Person": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Person",
      "description": "A person serving or working with Open Educational Resources.",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The person's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": ["Person"]
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "workLocation": {
          "$ref": "#/definitions/Place"
        }
      },
      "required": ["email"],
      "additionalProperties": false
    },
    "Organization": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Organization",
      "description": "An institution serving or working with Open Educational Resources.",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The organization's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": ["Organization"]
        },
        "location": {
          "description": "The organization's address and geo data",
          "$ref": "#/definitions/Place"
        },
        "legalName": {
          "description": "The organization's primary name, e.g. a legally recognized name",
          "$ref": "#/definitions/LocalizedString"
        }
      },
      "required": [
        "legalName",
        "location"
      ],
      "additionalProperties": false
    },
    "Place": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Place",
      "description": "An location description consisting of an address and/or geo data",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The place's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": ["Place"]
        },
        "geo": {
          "$ref": "#/definitions/GeoCoordinates"
        },
        "address": {
          "$ref": "#/definitions/PostalAddress"
        }
      },
      "required": [
        "address"
      ],
      "additionalProperties": false
    },
    "GeoCoordinates": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "GeoCoordinates",
      "description": "A geographical coordinate",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The geo coordinates's unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": ["GeoCoordinates"]
        },
        "lat": {
          "type": "number"
        },
        "lon": {
          "type": "number"
        }
      },
      "required": [
        "lat",
        "lon"
      ],
      "additionalProperties": false
    },
    "PostalAddress": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "PostalAddress",
      "description": "An universal address description",
      "type": "object",
      "properties": {
        "@context": {
          "type": "string",
          "format": "uri"
        },
        "@id": {
          "description": "The geo addresses' unique identifier",
          "type": "string",
          "format": "uri"
        },
        "@type": {
          "type": "string",
          "enum": ["PostalAddress"]
        },
        "streetAddress": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "addressLocality": {
          "type": "string"
        },
        "addressRegion": {
          "type": "string"
        },
        "addressCountry": {
          "$ref": "#/definitions/Country"
        }
      },
      "required": [
        "addressCountry"
      ],
      "additionalProperties": false
    },
    "LocalizedString": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "Localized string",
      "description": "A language-tagged string",
      "type": "object",
      "properties": {
        "@language": {
          "type": "string"
        },
        "@value": {
          "type": "string"
        }
      },
      "required": [
        "@value"
      ]
    },
