<div data-app="to-modal-on-load" data-dont-behave>

    <div class="text-center">

        <h1 class="modal-title">{{i18n "login"}}</h1>

        <p>{{i18n "UserIndex.register.loginMessage"}}</p>

        <a class="btn btn-default" href="/.login" data-behaviour="continue-link">{{i18n "login"}}</a>

        <hr/>

        <form action="/user/password" method="post">

            <h2>{{i18n "UserIndex.register.forgotPassword"}}</h2>

            <p>
                {{i18n "UserIndex.register.forgotPasswordMessage"}}
            </p>

            <div class="messages alert alert-danger"></div>

            <input type="hidden" name="@type" value="Person">

            <label class="sr-only" for="forgot-email">{{i18n "UserIndex.register.emailAddress"}}</label>

            <div class="input-group" style="width: 80%; margin: 0 auto;">
                <input type="email" name="email" required id="forgot-email" class="form-control" value="{{scope.user.email}}" placeholder="{{i18n "UserIndex.register.placeholderEmail"}}" />
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default">{{i18n "UserIndex.register.resetPassword"}}</button>
                </div>
            </div>

        </form>

        <hr/>

        <form action="/user/register" method="post">

            <h2>{{i18n "UserIndex.register.register"}}</h2>

            <div class="messages alert alert-danger"></div>

            <input type="hidden" name="@type" value="Person">

            <div class="form-group">
                <label class="sr-only" for="register-email">{{i18n "UserIndex.register.name"}}</label>
                <input type="text" name="name[0][@value]" class="form-control" required id="register-name-value" placeholder="{{i18n "UserIndex.register.placeholderName"}}">
                <input type="hidden" name="name[0][@language]" value="en" id="register-name-language">
            </div>

            <div class="form-group">
                <select class="form-control" name="location[address][addressCountry]" required id="register-country">
                    <option value="">{{i18n "UserIndex.register.placeholderCountry"}}</option>
                    {{#scope.countries}}
                    <option value="{{alpha-2}}">{{name}}</option>
                    {{/scope.countries}}
                </select>
            </div>

            <div class="form-group">
                <label class="sr-only" for="register-email">{{i18n "UserIndex.register.emailAddress"}}</label>
                <input type="email" name="email" class="form-control" required id="register-email" placeholder="{{i18n "UserIndex.register.placeholderEmail"}}">
            </div>

            <div class="form-group">
                <label class="sr-only" for="register-password">{{i18n "UserIndex.register.password"}}</label>
                <input type="password" name="password" class="form-control" required id="register-password" placeholder="{{i18n 'UserIndex.register.choosePassword'}} ...">
            </div>

            <div class="form-group">
                <label class="sr-only" for="register-password-confirm">{{i18n "UserIndex.register.repeatPassword"}}</label>
                <input type="password" name="password-confirm" class="form-control" required id="register-password-confirm" placeholder="{{i18n 'UserIndex.register.repeatPassword'}} ...">
            </div>

            <div class="checkbox text-left">
                <label>
                    <input type="checkbox" name="privacy-policy-accepted" id="privacy-policy-accepted" required>  {{{i18n "UserIndex.register.agreePolicy"}}}
                </label>
            </div>

            <div class="checkbox text-left">
                <label>
                    <input type="checkbox" name="terms-of-service-accepted" id="terms-of-service-accepted" required>  {{{i18n "UserIndex.register.agreeService"}}}
                </label>
            </div>

            <div class="checkbox text-left">
                <label>
                    <input type="checkbox" name="add-email" id="add-email">  {{i18n "UserIndex.register.agreeEmail"}}
                </label>
            </div>

            <div class="checkbox text-left">
                <label>
                    <input type="checkbox" name="register-newsletter" id="register-newsletter">  {{i18n "UserIndex.register.subscribe"}}
                </label>
            </div>

            <button type="submit" class="btn btn-default">{{i18n "UserIndex.register.register"}}</button>

        </form>

    </div>

</div>
