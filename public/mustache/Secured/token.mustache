<div role="main" class="column column-medium color-scheme-text bg-blue-palest">
    <div class="column-container">
        {{^user.email}}
            <h1>Login for country champions</h1>

            <form class="hijax" target="_self" method="post" action="/.token">
                <p>
                  Currently login / editing is only available to country champions. Please insert the email address registered
                  with your account to request a one-time password. Check your inbox for further instructions.
                </p>
                <input type="hidden" name="@type" value="Person">
                <label>
                    Email: <input name="email">
                </label>
                <button type="submit">Request token</button>
                <p>
                  Interested to become a country champion? Check our <a href="/contribute">constribute</a> page.
                </p>
            </form>
        {{/user.email}}
        {{#user.email}}
            <h1>{{user.email}}</h1>
            <form class="hijax" target="_self" method="post" action="/.auth">
                <input type="hidden" name="@type" value="Person">
                <button type="submit">Log out</button>
            </form>
        {{/user.email}}
    </div>
</div>
