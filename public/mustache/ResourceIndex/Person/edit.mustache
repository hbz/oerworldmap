<fieldset>

    <legend>Person</legend>

    {{input "@type" "Person" readonly="readonly"}}

    {{input "@id" [@id] readonly="readonly"}}

    {{> FormElements/LocalizedInput.mustache property=name key="name" title="Name"}}

    {{> FormElements/Input.mustache property=url key="url" title="URL" multiple=false type="url"}}

    {{> FormElements/Input.mustache property=email key="email" title="Email" multiple=false type="email"}}

    {{> FormElements/Input.mustache property=sameAs key="sameAs" title="Same as" multiple=true type="url"}}

    {{> ResourceIndex/Place/edit.mustache property=location key="location"}}

    {{> FormElements/LocalizedTextarea.mustache property=description key="description" title="Description"}}

    {{> FormElements/Id.mustache property=memberOf key="memberOf" title="Member of" multiple=true lookup="/resource/"}}

    {{> FormElements/Input.mustache property=countryChampionFor key="countryChampionFor" title="Country champion for" multiple=true type="text"}}

    {{> FormElements/Input.mustache property=image key="image" title="Image" multiple=false type="url"}}

    {{> FormElements/Id.mustache property=created key="created" title="Created" multiple=true lookup="/resource/?filter.about.@type=Article"}}

    {{> FormElements/Id.mustache property=mainEntityOf key="mainEntityOf" title="Main Entity of" multiple=true lookup="/resource/?filter.about.@type=Article"}}

    {{> FormElements/Id.mustache property=mentionedIn key="mentionedIn" title="Mentioned in" multiple=true lookup="/resource/?filter.about.@type=Article"}}

    {{> FormElements/Id.mustache property=participantIn key="participantIn" title="Participant in" multiple=true lookup="/resource/?filter.about.@type=Action"}}

    {{> FormElements/Id.mustache property=provides key="provides" title="Provides" multiple=true lookup="/resource/?filter.about.@type=Service"}}

    {{> FormElements/Id.mustache property=agentIn key="agentIn" title="Agent in" multiple=true lookup="/resource/?filter.about.@type=Action"}}

</fieldset>
