{{#if serviceType}}
    <span>
        {{#serviceType}}
            {{.}}{{#unless @last}},{{/unless}}
        {{/serviceType}}
    </span>
{{/if}}

{{#if provider}}
    <span>
        {{i18n "ResourceIndex.Service.subtitle.provider"}}:
        {{#provider}}
            <a href="/resource/{{@id}}">
                {{#localized this.name language=@root.language}}
                    {{[@value]}}
                {{else}}
                    {{[@id]}}
                {{/localized}}
            </a>{{#unless @last}},{{/unless}}
        {{/provider}}
    </span>
{{/if}}

{{#if additionalType}}
    <span>
        {{i18n "additionalType"}}:
        {{#additionalType}}
            {{.}}{{#unless @last}},{{/unless}}
        {{/additionalType}}
    </span>
{{/if}}
