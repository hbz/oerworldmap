<fieldset>

    <div class="hidden">
        <legend>Service</legend>
        {{input "@type" "Service" readonly="readonly"}}
        {{input "@id" [@id] readonly="readonly"}}
    </div>

    {{> FormElements/localizedInput.mustache property=name key="name" title=(i18n "Service.name")}}

    {{> FormElements/localizedInput.mustache property=alternateName key="alternateName" title=(i18n "Service.alternateName")}}

    {{> FormElements/input.mustache property=serviceType key="serviceType" title=(i18n "Service.serviceType") hidden=true multiple=false type="text"}}

    {{> FormElements/localizedTextarea.mustache property=description key="description" title=(i18n "Service.description")}}

    {{> FormElements/input.mustache property=startDate key="startDate" title=(i18n "Service.startDate") hidden=false multiple=false type="text"}}

    {{> FormElements/input.mustache property=email key="email" title=(i18n "Service.email") hidden=false multiple=false type="email"}}

    {{> FormElements/input.mustache property=license key="license" title=(i18n "Service.license") hidden=true multiple=true type="text"}}

    {{> FormElements/input.mustache property=image key="image" title=(i18n "Service.image") hidden=false multiple=false type="url"}}

    {{> ResourceIndex/Place/edit.mustache property=location key="location" title=(i18n "Service.location")}}

    {{> FormElements/id.mustache property=about key="about" title=(i18n "Service.about") hidden=false multiple=true lookup_url="/assets/json/esc.json"}}

    {{> FormElements/id.mustache property=audience key="audience" title=(i18n "Service.audience") hidden=false multiple=true lookup_url="/assets/json/isced-1997.json"}}

    {{> FormElements/id.mustache property=provider key="provider" title=(i18n "Service.provider") hidden=false multiple=true lookup_url="/resource/?filter.about.@type=Organization"}}

    {{> ResourceIndex/ServiceChannel/edit.mustache property=availableChannel key="availableChannel" title=(i18n "Service.availableChannel")}}

    {{> FormElements/id.mustache property=mainEntityOf key="mainEntityOf" title=(i18n "Service.mainEntityOf") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Article"}}

    {{> FormElements/id.mustache property=mentionedIn key="mentionedIn" title=(i18n "Service.mentionedIn") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Article"}}

    {{> FormElements/id.mustache property=instrumentIn key="instrumentIn" title=(i18n "Service.instrumentIn") hidden=false multiple=true lookup_url="/resource/?filter.about.@type=Action"}}

    {{> FormElements/id.mustache property=resultOf key="resultOf" title=(i18n "Service.resultOf") hidden=false multiple=true lookup_url="/resource/?filter.about.@type=Action"}}

    {{> FormElements/id.mustache property=member key="member" title=(i18n "Service.member") hidden=false multiple=true lookup_url="/resource/?q=(about.@type:Organization%20OR%20about.@type:Person)"}}

    {{> FormElements/id.mustache property=memberOf key="memberOf" title=(i18n "Service.memberOf") hidden=true multiple=true lookup_url="/resource/?filter.about.@type=Organization"}}

    {{> FormElements/input.mustache property=sameAs key="sameAs" title=(i18n "Service.sameAs") hidden=false multiple=true type="url"}}

</fieldset>
