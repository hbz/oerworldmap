<div
        role="complementary"
        data-view="map"
        data-focus="{{#scope}}{{@id}}{{/scope}}"
        class="color-scheme-map column-medium"
        >
    <div class="hidden">
        <a href="/aggregation/" class="hijax transclude map-view-hidden" target="_self">Aggregations</a>
    </div>
</div>

<div role="main" class="column column-medium color-scheme-text bg-blue-palest">
    <div class="column-container">

        {{#scope}}

            <article class="resource" data-behaviour="populateMap">

                <script type="application/ld+json">
                    {{{.}}}
                </script>

                {{#if user.email}}
                    <button class="btn btn-inverted resource-edit-btn" data-toggle="modal" data-target="#resource-edit">
                        <i class="fa fa-pencil"></i>
                    </button>
                    <a target="_blank" href="/log/{{[@id]}}" class="btn btn-inverted resource-edit-btn">
                        <i class="fa fa-history"></i>
                    </a>
                {{/if}}

                <div class="resource-header">

                    <h1 class="resource-title">
                        {{getIcon @type}}
                        {{#localized name}}
                            {{[@value]}}
                        {{else}}
                            {{[@id]}}
                        {{/localized}}
                    </h1>

                    {{#additionalType}}
                        <div class="resource-subline">
                            <div class="resource-subline-label">Additional Type</div>
                            {{.}}
                        </div>
                    {{/additionalType}}

                </div>

                {{#image}}
                    <div class="paragraph-image">
                        <a href="{{.}}" target="_blank">
                            <img src="{{.}}" width="150" />
                        </a>
                    </div>
                {{/image}}

                {{#localized description}}
                    <p>{{{[@value]}}}</p>
                {{/localized}}

                {{#url}}
                    <p>
                        <a href="{{.}}" target="_blank" class="btn btn-default">
                            <i class="fa fa-external-link"></i>
                            {{stripProtocol .}}
                        </a>
                    </p>
                {{/url}}

                <table class="table resource-details-table">

                    {{#if email}}
                        <tr>
                            <td>{{i18n "Action.email"}}</td>
                            <td>
                                <a href="mailto:{{{obfuscate email}}}">{{{obfuscate email}}}</a>
                            </td>
                        </tr>
                    {{/if}}

                    {{#if alternateName}}
                        <tr>
                            <td>{{i18n "Action.alternateName"}}</td>
                            <td>
                                <ul class="comma-seperated-list">
                                    {{#localized alternateName}}
                                        <li>{{[@value]}}</li>
                                    {{/localized}}
                                </ul>
                            </td>
                        </tr>
                    {{/if}}

                    {{#if sameAs}}
                        <tr>
                            <td>{{i18n "Action.sameAs"}}</td>
                            <td>
                                <ul class="resource-list truncated">
                                    {{#sameAs}}
                                        <li>{{externalLink .}}</li>
                                    {{/sameAs}}
                                </ul>
                            </td>
                        </tr>
                    {{/if}}

                    {{#if startTime}}
                        <tr>
                            <td>{{i18n "Action.startTime"}} - {{i18n "Action.endTime"}}</td>
                            <td>{{startTime}} - {{endTime}}</td>
                        </tr>
                    {{/if}}

                    <tr>
                        <td>{{i18n "Action.location"}}</td>
                        <td>
                            {{#location}}
                                {{>ResourceIndex/Place/read.mustache}}
                            {{/location}}
                        </td>
                    </tr>

                    {{#if mentionedIn}}
                        <tr>
                            <td>{{i18n "Action.mentionedIn"}}</td>
                            <td>
                                <ul class="resource-list truncated">
                                    {{#mentionedIn}}
                                        <li>{{>ResourceIndex/link.mustache}}</li>
                                    {{/mentionedIn}}
                                </ul>
                            </td>
                        </tr>
                    {{/if}}

                    {{#if agent}}
                        <tr>
                            <td>{{i18n "Action.agent"}}</td>
                            <td>
                                <ul class="resource-list truncated">
                                    {{#agent}}
                                        <li>{{>ResourceIndex/link.mustache}}</li>
                                    {{/agent}}
                                </ul>
                            </td>
                        </tr>
                    {{/if}}

                    {{#if participant}}
                        <tr>
                            <td>{{i18n "Action.participant"}}</td>
                            <td>
                                <ul class="resource-list truncated">
                                    {{#participant}}
                                        <li>{{>ResourceIndex/link.mustache}}</li>
                                    {{/participant}}
                                </ul>
                            </td>
                        </tr>
                    {{/if}}

                    {{#if instrument}}
                        <tr>
                            <td>{{i18n "Action.instrument"}}</td>
                            <td>
                                <ul class="resource-list truncated">
                                    {{#instrument}}
                                        <li>{{>ResourceIndex/link.mustache}}</li>
                                    {{/instrument}}
                                </ul>
                            </td>
                        </tr>
                    {{/if}}

                    {{#if result}}
                        <tr>
                            <td>{{i18n "Action.result"}}</td>
                            <td>
                                <ul class="resource-list truncated">
                                    {{#result}}
                                        <li>{{>ResourceIndex/link.mustache}}</li>
                                    {{/result}}
                                </ul>
                            </td>
                        </tr>
                    {{/if}}

                    {{#if funder}}
                        <tr>
                            <td>{{i18n "Action.funder"}}</td>
                            <td>
                                <ul class="resource-list truncated">
                                    {{#funder}}
                                        <li>{{>ResourceIndex/link.mustache}}</li>
                                    {{/funder}}
                                </ul>
                            </td>
                        </tr>
                    {{/if}}

                    {{#if keywords}}
                        <tr>
                            <td>{{i18n "Action.keywords"}}</td>
                            <td>
                                <ul class="comma-seperated-list">
                                    {{#keywords}}
                                        <li><a href="/resource/?filter.about.keywords={{.}}">{{.}}</a></li>
                                    {{/keywords}}
                              </ul>
                          </td>
                      </tr>
                    {{/if}}


                </table>

            </article>

        {{/scope}}

    </div>
</div>

<div class="modal fade resource-form-modal" id="resource-edit">
    <div class="modal-dialog">
        <div class="modal-content bg-blue-palest color-scheme-text">
            <div class="modal-body clearfix">

                <h1>Edit Project</h1>

                <form method="post" class="edit hijax" target="edit-action-feedback">

                    <div id="edit-action-feedback"></div>

                    {{> ResourceIndex/Action/edit.mustache scope}}

                    <div class="pull-right resource-form-top-padding">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Quit</button>
                        <button type="submit" class="btn btn-inverted">Save Changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
