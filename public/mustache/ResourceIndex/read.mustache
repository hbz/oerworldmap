                        {{> (stringFormat "ResourceIndex/%s/edit.mustache" @type)}}

                        {{#ifCond @type "!=" "Article"}}
                            <div class="alert alert-info clearfix">
                                <p>
                                    {{{i18n "ResourceIndex.read.agree"}}}
                                </p>
                                <div class="pull-right">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">{{i18n "cancel"}}</button>
                                    <button type="submit" class="btn btn-inverted">{{i18n "publish"}}</button>
                                </div>
                            </div>
                        {{else}}
                            <div class="pull-right">
                                <button type="button" class="btn btn-default" data-dismiss="modal">{{i18n "cancel"}}</button>
                                <button type="submit" class="btn btn-inverted">{{i18n "publish"}}</button>
                            </div>
                        {{/ifCond}}

                    </form>

                {{/if}}

                {{#if ../permissions.like}}
                    <form id="resource-lighthouse" method="post" class="clearfix visible-modal" action="/resource/{{scope.userLighthouseResource.[@id]}}">

                        <div class="modal-title">
                            <h1>{{i18n "ResourceIndex.read.lightHouse"}} {{[@type]}}</h1>
                            <div class="right">
                                <a href="https://github.com/hbz/oerworldmap/wiki/FAQs-for-OER-World-Map-editors" target="_blank">{{i18n "needHelp"}}</a>
                            </div>
                        </div>

                        <div class="messages resource-form-widget"></div>

                        {{> "ResourceIndex/LighthouseAction/edit.mustache" scope.userLighthouseResource }}

                        <div class="pull-right">
                            <button type="button" class="btn btn-default" data-dismiss="modal">{{i18n "cancel"}}</button>
                            <button type="submit" class="btn btn-inverted">{{i18n "publish"}}</button>
                        </div>

                    </form>
                {{/if}}

                {{#localized this.name language=@root.language}}
                    {{> share.mustache type="detail" url=@root.requestUri name=[@value]}}
                {{/localized}}

                {{> export.mustache type="detail" url=@root.requestUri}}

            </div>

            <div class="resource-comments">

                {{#if comments}}

                    <h2>{{i18n "ResourceIndex.read.comments"}}</h2>

                    {{#sort comments "dateCreated" "asc"}}
                        {{#if author.[0].name}}
                            <hr>
                            <div>
                                <p>
                                    <small>
                                        <em>
                                            {{#author}}
                                                {{#localized this.name language=@root.language}}
                                                    <a href="/resource/{{[@id]}}">{{[@value]}}</a>
                                                {{/localized}}
                                            {{/author}}
                                        </em>
                                        on
                                        <em>{{this.dateCreated}}</em>
                                    </small>
                                    {{#if ../permissions.administer}}
                                        <a data-behaviour="delete-resource" data-continue="reload" href="/resource/{{[@id]}}"><i class="fa fa-fw fa-trash"></i></a>
                                    {{/if}}
                                </p>
                                <div>
                                    {{#localized this.text language=@root.language}}
                                        <div class="html-from-markdown">
                                            {{md [@value]}}
                                        </div>
                                    {{/localized}}
                                </div>
                            </div>
                        {{/if}}
                    {{/sort}}

                {{/if}}

                {{#if ../permissions.comment}}

                    <h2>{{i18n "comment"}}</h2>
                    {{#if user.name}}
                        <form method="post" action="/resource/{{[@id]}}/comment">
                            {{>ResourceIndex/Comment/edit.mustache}}
                            <div class="pull-right resource-form-top-padding">
                                <button class="btn btn-inverted" type="submit">{{i18n "ResourceIndex.read.submit"}}</button>
                            </div>
                        </form>
                    {{else}}
                        <p>
                            <em>
                                {{{stringFormat (i18n "ResourceIndex.read.provideNameMessage") user.[@id]}}}
                            </em>
                        </p>
                    {{/if}}

                {{/if}}

            </div>

        {{/resource.about}}

    {{/scope}}

</div>
