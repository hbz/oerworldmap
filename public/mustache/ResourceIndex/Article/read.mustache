<div role="complementary" data-view="map" data-focus="{{#scope.mentions}}{{@id}} {{/scope.mentions}}" class="color-scheme-map column-medium">
    <div class="hidden">
        <a href="/aggregation/" class="hijax transclude map-view-hidden" target="_self">Aggregations</a>
    </div>
</div>

<div role="main" class="column column-medium color-scheme-text bg-blue-palest">
    <div class="column-container">

        {{#scope}}

            <article class="resource" data-behaviour="populateMap">

                <script type="application/ld+json">
                    {{{.}}}
                </script>

                <button class="btn btn-inverted resource-edit-btn" data-toggle="modal" data-target="#resource-edit">
                    <i class="fa fa-pencil"></i>
                </button>

                <div class="resource-header">

                    <h1 class="resource-title">
                      <i class="fa fa-fw fa-comment"></i>
                      {{#name}}{{@value}}{{/name}}
                    </h1>

                    <div class="resource-subline">
                        <div class="resource-subline-label">Contributed</div>{{#dateCreated}} on {{.}} {{/dateCreated}}by
                        <ul class="comma-seperated-list">
                            {{#creator}}
                                <li>
                                    <a href="/resource/{{@id}}">
                                      {{#name}}{{@value}}{{/name}}
                                    </a>
                                </li>
                            {{/creator}}
                        </ul>
                    </div>

                </div>

                {{#image}}
                    <div class="paragraph-image">
                        <a href="{{.}}" target="_blank">
                            <img src="{{.}}" width="250" />
                        </a>
                    </div>
                {{/image}}

                {{#articleBody}}{{{@value}}}{{/articleBody}}

                {{#keywords.size}}
                    <h2>Keywords</h2>
                    <ul>
                        {{#keywords}}<li><a href='/resource/?q="{{.}}" '>{{.}}</a></li>{{/keywords}}
                    </ul>
                {{/keywords.size}}

            </article>

            <hr/>

            <aside>

                <h2>Related</h2>

                <ul class="resource-list truncated">
                    <script type="application/ld+json">
                        {{{mentions}}}
                    </script>
                    <script type="application/ld+json">
                        {{{mainEntity}}}
                    </script>
                    {{#mainEntity}}
                        <li about="{{@id}}">
                            {{> (stringFormat "ResourceIndex/%s/link.mustache" @type) }}
                        </li>
                    {{/mainEntity}}
                    {{#mentions}}
                        <li about="{{@id}}">
                            {{> (stringFormat "ResourceIndex/%s/link.mustache" @type) }}
                        </li>
                    {{/mentions}}
                </ul>

                {{^mentions}}
                    <em>No related entities found</em>
                {{/mentions}}

            </aside>

        {{/scope}}

    </div>
</div>

<div class="modal fade" id="resource-edit">
    <div class="modal-dialog">
        <div class="modal-content bg-blue-palest color-scheme-text">
            <div class="modal-body clearfix">

                <h1>Edit Article</h1>

                <hr/>

                <form method="post" class="edit">
                    {{> ResourceIndex/Article/edit.mustache scope}}
                    <hr/>
                    <div class="pull-right">
                        <button type="submit" class="btn btn-default" data-dismiss="modal">Quit</button>
                        <button type="submit" class="btn btn-inverted">Save Changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
