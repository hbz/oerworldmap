<div role="complementary" data-view="map" data-focus="{{#scope.mentions}}{{@id}} {{/scope.mentions}}" class="color-scheme-map column-medium">
    <div class="hidden">
        <a href="/aggregation/" class="hijax transclude map-view-hidden" target="_self">Aggregations</a>
    </div>
</div>

<div role="main" class="column column-medium color-scheme-text bg-blue-palest">
    <div class="column-container">

        {{#scope}}

            <article class="resource" data-behaviour="populateMap">

                <script type="application/ld+json">
                    {{{.}}}
                </script>

                {{#if user.email}}
                    <button class="btn btn-inverted resource-edit-btn" data-toggle="modal" data-target="#resource-edit">
                        <i class="fa fa-pencil"></i>
                    </button>
                    <a target="_blank" href="/log/{{[@id]}}" class="btn btn-inverted resource-edit-btn">
                        <i class="fa fa-history"></i>
                    </a>
                {{/if}}

                <div class="resource-header">

                    <h1 class="resource-title">
                        {{getIcon @type}}
                        {{#localized name}}
                            {{[@value]}}
                        {{else}}
                            {{[@id]}}
                        {{/localized}}
                    </h1>

                    <div class="resource-subline">
                        <div class="resource-subline-label">Contributed</div>{{#dateCreated}} on {{.}} {{/dateCreated}}by
                        <ul class="comma-seperated-list">
                            {{#creator}}
                                <li>
                                    <a href="/resource/{{@id}}">
                                        {{#localized name}}
                                            {{[@value]}}
                                        {{else}}
                                            {{[@id]}}
                                        {{/localized}}
                                    </a>
                                </li>
                            {{/creator}}
                        </ul>
                    </div>

                </div>

                {{#image}}
                    <div class="paragraph-image">
                        <a href="{{.}}" target="_blank">
                            <img src="{{.}}" width="250" />
                        </a>
                    </div>
                {{/image}}

                {{#localized articleBody}}{{{[@value]}}}{{/localized}}

                {{#keywords.size}}
                    <h2>{{i18n "Article.keywords"}}</h2>
                    <ul>
                        {{#keywords}}<li><a href='/resource/?q="{{.}}" '>{{.}}</a></li>{{/keywords}}
                    </ul>
                {{/keywords.size}}

            </article>

            <hr/>

            <aside>

                <h2>{{i18n "Article.mentions"}}</h2>

                <ul class="resource-list truncated">
                    <script type="application/ld+json">
                        {{{mentions}}}
                    </script>
                    <script type="application/ld+json">
                        {{{mainEntity}}}
                    </script>
                    {{#mainEntity}}
                        <li about="{{@id}}">
                            {{>ResourceIndex/link.mustache}}
                        </li>
                    {{/mainEntity}}
                    {{#mentions}}
                        <li about="{{@id}}">
                            {{>ResourceIndex/link.mustache}}
                        </li>
                    {{/mentions}}
                </ul>

                {{^mentions}}
                    <em>No related entities found</em>
                {{/mentions}}

            </aside>

        {{/scope}}

    </div>
</div>

<div class="modal fade resource-form-modal" id="resource-edit">
    <div class="modal-dialog">
        <div class="modal-content bg-blue-palest color-scheme-text">
            <div class="modal-body clearfix">

                <h1>Edit Story</h1>

                <form method="post" class="edit hijax" target="edit-article-feedback">

                    <div id="edit-article-feedback"></div>

                    {{> ResourceIndex/Article/edit.mustache scope}}

                    <div class="pull-right resource-form-top-padding">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Quit</button>
                        <button type="submit" class="btn btn-inverted">Save Changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
