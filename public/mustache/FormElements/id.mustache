<div class="resource-form-widget{{#if hidden}} hidden{{/if}}" data-behaviour="resource" data-lookup="{{lookup_url}}" data-key="{{property_path}}">

    <h4>{{title}}{{#tooltip}} <i class="fa fa-question-circle" title="{{.}}"></i>{{/tooltip}}</h4>

    {{#if multiple}}
        <ul title="{{title}}" class="multiple-list">
            {{#property}}
                <li class="multiple-one">
                    {{input (stringFormat "%s[%s][@id]" property_path @index) [@id] type="url" data-lookup=lookup}}
                    <script type="application/ld+json">{{json .}}</script>
                </li>
            {{/property}}
            <li class="multiple-one">{{input (stringFormat "%s[%s][@id]" property_path (size property)) "" type="url" data-lookup=lookup}}</li>
        </ul>
    {{else}}
        <ul title="{{title}}" class="multiple-list" data-max-cardinality="1">
            {{#property}}
                <li class="multiple-one">
                    {{input (stringFormat "%s[@id]" property_path) [@id] type="url" data-lookup=lookup}}
                    <script type="application/ld+json">{{json .}}</script>
                </li>
            {{/property}}
            {{^property}}
                <li class="multiple-one">{{input (stringFormat "%s[@id]" property_path) "" type="url" data-lookup=lookup}}</li>
            {{/property}}
        </ul>
    {{/if}}

</div>
