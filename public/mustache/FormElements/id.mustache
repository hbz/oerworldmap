<div class="resource-form-widget{{#if hidden}} hidden{{/if}}" data-behaviour="resource" data-lookup="{{lookup_url}}" data-key="{{key}}">

    <h4>{{title}}</h4>

    {{#if multiple}}
        <ul title="{{title}}" class="multiple-list">
            {{#property}}
                <li class="multiple-one">
                    {{input (stringFormat "%s[%s][@id]" key @index) [@id] type="url" data-lookup=lookup}}
                    <script type="application/ld+json">{{json .}}</script>
                </li>
            {{/property}}
            <li class="multiple-one">{{input (stringFormat "%s[%s][@id]" key (size property)) "" type="url" data-lookup=lookup}}</li>
        </ul>
    {{else}}
        <div class="single">
            {{input (stringFormat "%s[@id]" key) property type="url" data-lookup=lookup}}
        </div>
    {{/if}}

</div>
