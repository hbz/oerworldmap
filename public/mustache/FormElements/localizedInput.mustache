<div class="resource-form-widget {{#if hidden}} hidden{{/if}}" data-behaviour="localizedInput">

    <h4>{{title}}{{#tooltip}} <i class="fa fa-question-circle" title="{{.}}"></i>{{/tooltip}}</h4>

    <ul title="{{title}}" class="multiple-list">
        {{#property}}
            <li class="multiple-one">
                <fieldset>
                    <legend>{{title}}</legend>
                    {{input (stringFormat "%s[%s][@value]" property_path @index) [@value] autocomplete="off"}}
                    {{input (stringFormat "%s[%s][@language]" property_path @index) [@language] autocomplete="off"}}
                </fieldset>
            </li>
        {{/property}}
        <li class="multiple-one">
            <fieldset>
                <legend>{{title}}</legend>
                {{input (stringFormat "%s[%s][@value]" property_path (size property)) "" autocomplete="off"}}
                {{input (stringFormat "%s[%s][@language]" property_path (size property)) "" autocomplete="off"}}
            </fieldset>
        </li>
    </ul>

</div>
