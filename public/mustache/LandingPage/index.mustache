<div data-app="notification notification-dismissable" id="welcome">

    <h1>{{i18n "LandigPage.index.welcome"}}</h1>

    <div class="lead">
        <p>
            {{i18n "LandigPage.index.goal"}}
        </p>
        <p>
            {{{i18n "LandigPage.index.contribute"}}}
        </p>
    </div>


    <div class="hidden-mobile">

        <h2>{{i18n "LandigPage.index.currentlyTitle"}}</h2>

        {{#scope.typeAggregation.[about.@type]}}

            <table class="numbers-table">
                <tr>
                    {{#buckets}}

                        <td>
                            <a href="/resource/?filter.about.@type={{key}}">
                                {{getIcon key}}<br/>
                                <span class="name">{{i18n key}}</span><br/>
                                <span class="count">{{doc_count}}</span>
                            </a>
                        </td>

                    {{/buckets}}
                </tr>
            </table>

        {{/scope.typeAggregation.[about.@type]}}

        <p>
            <a href="/aggregation/">{{i18n "LandigPage.index.moreStatistics"}}</a>&ensp;â€“&ensp;<a href="/feed/">{{i18n "LandigPage.index.recentAdditions"}}</a>
        </p>

    </div>

    <div class="visible-mobile" style="margin-top: 20px;">
        <button type="button" class="btn" data-app="close-notification">
            {{i18n "LandigPage.index.enterMap"}}
        </button>
    </div>

    <div class="lead" style="margin-top: 20px;">
        <h2>{{i18n "LandigPage.index.announcement"}}</h2>
        <p>
            {{{i18n "LandigPage.index.surveyMessage"}}}
        </p>
    </div>

</div>
