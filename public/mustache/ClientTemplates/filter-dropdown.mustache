<div class="btn-group dropdown filter" data-filter-name="{{name}}">

    <button
        type="button"
        class="btn btn-default {{#if active}} active {{/if}}"
        title="{{button_title}}"
        data-filter-action="toggle-filter"
    >
        <span class="text">{{button_text}}</span>
    </button>

    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-chevron-down"></i>
    </button>

    {{#if typeahead}}

        <div class="dropdown-menu dropdown-menu-right dropdown-menu-typeahead">
            <input type="text" class="form-control typeahead" placeholder="..." />
            <div class="input-icon">
                <i class="fa fa-search"></i>
            </div>
        </div>

    {{else}}

        <div class="dropdown-menu dropdown-menu-right">

            {{#each buckets}}

                <div class="tt-suggestion tt-selectable">
                    {{> filter-dropdown-entry}}
                </div>

            {{/each}}

        </div>

    {{/if}}

</div>
