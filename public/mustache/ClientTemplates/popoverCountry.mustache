<div class="popover-main-section">

    <div class="popover-section bg-blue-palest">
      <strong>{{i18n key bundle="iso3166-1-alpha-2"}}</strong>

        {{#by_type.buckets}}
            <span class="entity-count">
                {{doc_count}}
                {{getIcon key}}
            </span>
        {{/by_type.buckets}}

    </div>

    <div class="popover-section bg-blue-paler">

        {{#champions}}
            {{#if doc_count}}
                {{i18n "ClientTemplates.popoverCountry.champion"}}: <i class="fa fa-check"></i>
            {{else}}
                {{i18n "ClientTemplates.popoverCountry.champion"}}: <i class="fa fa-times"></i>
            {{/if}}
        {{/champions}}
        {{^champions}}
            {{i18n "ClientTemplates.popoverCountry.champion"}}: <i class="fa fa-times"></i>
        {{/champions}}

    </div>

</div>
